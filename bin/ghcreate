#!/usr/bin/env ruby

require 'optparse'

OptionParser.new do |option|
  option.banner = "github-create - to help you create github repos for your projects"

  option.on("-r", "--reset", "Reset github credentials") do
    GithubCreate.reset_credentials
    exit
  end

  option.on("NAME", "NAME", "specifying the name of the repo to create") do |n|
    print "Create new repo: " << n
  end
  
end.parse!
